<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>文章编辑</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <script src="~/kindeditor/kindeditor-all-min.js"></script>
    <link rel="stylesheet" href="~/Admin/layui/css/layui.css" media="all" />
    <script type="text/javascript" src="~/Admin/layui/layui.js"></script>
    <script src="~/Admin/model/newsEdit.js"></script>
</head>
<body class="childrenBody">
    <form class="layui-form">
      <input id="blog_article_id" value="@ViewBag.blog_article_id" hidden="hidden" />
        <div class="layui-form-item">
            <label class="layui-form-label">文章标题：</label>
            <div class="layui-input-block">
                <input type="text" class="layui-input newsName" lay-verify="required" placeholder="请输入文章标题">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">文章封面：</label>
            <div class="layui-input-block">
                <input type="text" class="layui-input newsImage" lay-verify="required" placeholder="请输入文章封面">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">标签：</label>
                <div class="layui-input-block">
                    <input type="checkbox" name="tuijian" class="tuijian" value="推荐" title="推荐">
                    <input type="checkbox" name="haowen" class="haowen" value="好文" title="好文">
                    <input type="checkbox" name="ganwu" class="ganwu" value="感悟" title="感悟">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">文章类别：</label>
            <div class="layui-input-block">
                <select class="form-control newsType" id="newsType"  >
                    <option value="0">.Net</option>
                    <option value="1">数据库</option>
                    <option value="2">Java</option>
                    <option value="3">其他相关</option>
                    <option value="4">黑科技</option>
                    <option value="5">网络安全</option>
                    <option value="6">免费资源</option>
                    <option value="7">心情琐事</option>
                    <option value="8">程序人生</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">内容摘要</label>
            <div class="layui-input-block">
                <textarea id="txtContent" placeholder="请输入内容摘要" class="layui-textarea neirong"></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">文章内容</label>
            <div class="layui-input-block">
                @*<textarea class="layui-textarea layui-hide" name="content" lay-verify="content" id="news_content"></textarea>*@
                <textarea name="content" id="content" style="width:800px;height:400px;visibility:hidden;"></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="addNews">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>

</body>
</html>
